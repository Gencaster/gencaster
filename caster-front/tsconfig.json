{
  "compilerOptions": {
    "composite": true,
    "emitDeclarationOnly": true,
    "declaration": true,
    "allowJs": true,
    "declarationMap": true,
    "checkJs": true,
    "downlevelIteration": true,
    "outDir": "dist",
    "maxNodeModuleJsDepth": 100,
    "skipLibCheck": false,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  }
}
